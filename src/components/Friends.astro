---
interface Props {
  name: string;
  avatar?: string | null;
  description: string;
  url: string;
}

const {name, avatar = null, description, url} = Astro.props;
---

<a
  class="flex items-center shadow rounded-lg hover:cursor-pointer bg-skin-card w-auto p-4"
  href={url}
  target="_blank"
>
  {avatar ?
    <div class="flex items-center gap-2 min-w-0">
      <img class="h-14 w-14 rounded flex-shrink-0" src={avatar} alt="avatar"/>
      <div class="flex flex-col justify-around gap-1 min-w-0">
        <div title={name} class="truncate font-bold">
          {name}
        </div>
        <div title={description} class="truncate text-sm">
          {description}
        </div>
      </div>
    </div>
    :
    <div class="flex flex-col gap-1 justify-around mx-2 min-w-0">
      <div title={name} class="truncate font-bold">
        {name}
      </div>
      <div title={description} class="truncate text-sm">
        {description}
      </div>
    </div>
  }

</a>
